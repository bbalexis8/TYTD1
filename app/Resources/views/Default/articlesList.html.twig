{% extends ':Default:basic.html.twig' %}

{% block body %}

    <div class="container pageblog text-center">
        <h1>To You : nos articles pour vos évènements</h1>
        <hr>
        <br>
<div class="col-lg-6 col-lg-offset-3 col-xs-10 col-xs-offset-1">
    {% for article in articles %}
        <div id="divarticle" class="row text-justify">
            <h2><a href="{{ path('onearticle', { 'id': article.id }) }}">{{ article.titre }}</a></h2>
            <img src="{{ article.image }}" class="img-responsive" alt="">
            <p>{{ article.description }}</p><br>
            <p id="autdate"><span class="glyphicon glyphicon glyphicon-menu-right"></span> Publié par : {{ article.utilisateur.username }} - le {{ article.date|date('d/m/Y') }}</p>
            <br>
            <a id="btnartcpt" href="{{ path('onearticle', { 'id': article.id }) }}" class="btn btn-default col-lg-3 col-lg-offset-8 col-md-6 col-md-offset-3 col-xs-10 col-xs-offset-1"><span class="glyphicon  glyphicon glyphicon-chevron-right "></span> Article complet</a>
        </div>
            <br><br>
    {% endfor %}
</div>
    </div>
{% endblock %}