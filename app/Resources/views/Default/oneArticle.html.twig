{% extends ':Default:basic.html.twig' %}

{% block body %}

    <div class="container pageblog text-center">

            <div id="divarticle" class="col-lg-6 col-lg-offset-3 col-xs-12 text-justify">
                <h2>{{ article.titre }}</h2>
                <ul> Publié par {{ article.utilisateur.username }}, le {{ article.date|date('d/m/Y') }}</ul>
                <br>
                <img src="{{ article.image }}" class="img-responsive" alt="">
                <br>
                <p class="text-justify">{{ article.texte }}</p>
                <br>
                <div id="divcomart" class="col-lg-10 col-lg-offset-1 col-xs-12">
                <h2 class="text-center">Liste des commentaires :</h2>
                {% for commentaire in commentaires %}
                    <h3>{{ commentaire.titreC }}</h3>
                    <p>Posté le : {{ commentaire.dateC|date('d/m/Y') }}</p>
                    <p>par {{ commentaire.utilisateur.username }}</p>
                    <p>"{{ commentaire.texte }}"</p>
                    <hr>
                {% endfor %}
                </div>
                <br>
            <a id="btnlistart" href="{{ path('articleslist') }}"
               class="btn btn-default col-lg-2 col-lg-offset-5 col-md-2 col-md-offset-5 col-sm-2 col-sm-offset-5 col-xs-6 col-xs-offset-3"><span
                        class="glyphicon  glyphicon glyphicon-chevron-right "></span> Retour</a>
        </div>

    </div>

{% endblock %}