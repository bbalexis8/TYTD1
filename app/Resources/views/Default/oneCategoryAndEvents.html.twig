{% extends ':Default:basic.html.twig' %}

{% block body %}
    <body class="bodyeventcat text-center">
            <br>
            <div class="jumbotron eventcat text-justify col-lg-6 col-lg-offset-3 col-xs-10">
                <div class="col-lg-12 col-xs-12 text-center">
                <img class="img-circle" src="{{ categorie.imageCa }}">
                    <h1>«{{ categorie.nomCa }}»</h1>
                </div>
                <div class="col-lg-12 col-xs-12">
                    <br>
                <p class="text-center">Liste des événements liés à cette catégorie :</p>
                </div>
                {% for evenement in evenements %}

                    <div class="jumbotron-fluid col-lg-10 col-lg-offset-1 jumboevent">
                    <h2>« {{ evenement.nom }} »</h2>
                    <p>Date : {{ evenement.dateE|date('d/m/Y') }}</p>
                    <p>Réalisé par {{ evenement.utilisateur.username }}</p>
                    </div>
                {% endfor %}
                <br>
                <a id="btnlistemcpt" href="{{ path('eventcategorieslist') }}"
                   class="btn btn-default col-lg-6 col-lg-offset-3 col-xs-4 col-xs-offset-3">

                    <span class="glyphicon  glyphicon glyphicon-chevron-right "></span> Retour à la liste des catégories</a>
            </div>
            <br><br>
    </body>
{% endblock %}

