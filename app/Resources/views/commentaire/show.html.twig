{% extends 'admin/adminbase.html.twig' %}

{% block body %}
    <div class="bobody">
        <h2>Fiche Commentaire</h2>

        <table>
            <tbody>
            <tr>
                <th>N° </th>
                <td>{{ commentaire.id }}</td>
            </tr>
            <tr>
                <th>Texte </th>
                <td>{{ commentaire.texte }}</td>
            </tr>
            <tr>
                <th>Date </th>
                <td>{% if commentaire.dateC %}{{ commentaire.dateC|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Titre </th>
                <td>{{ commentaire.titreC }}</td>
            </tr>
            </tbody>
        </table>

        <ul>
            <li><br>
                <a href="{{ path('commentaire_index') }}">Retour à la liste</a>
            </li>
            <li><br>
                <a href="{{ path('commentaire_edit', { 'id': commentaire.id }) }}">Modifier</a>
            </li>
            <li><br>
                {{ form_start(delete_form) }}
                <input type="submit" value="Supprimer le commentaire">
                {{ form_end(delete_form) }}
            </li>
        </ul><hr>
    </div>
{% endblock %}
