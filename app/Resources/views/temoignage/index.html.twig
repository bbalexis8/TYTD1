{% extends ':Default:basic.html.twig' %}

{% block body %}
    <div class="container">

    <div class="blog-header">
        <h1 class="blog-title">Liste des Témoignages</h1>
        <p class="lead blog-description">Retrouvez tous les témoignages liés aux événements créés via l'outil TYTD !</p>
    </div>


    <div class="row">

    <div class="col-sm-12 blog-main">

        {% for temoignage in temoignages %}
            <div class="blog-post">
                <h2 class="blog-post-title">{{ temoignage.titreT }}</h2>
                <p class="blog-post-meta">Posté le {% if temoignage.dateT %}{{ temoignage.dateT|date('Y-m-d') }}
                    {% endif %}</p>
                <p>En quelques mots ... <br>{{ temoignage.descriptionT }}</p>

                <a href="{{ path('temoignage_show', { 'id': temoignage.id }) }}">
                    Plus de détails</a>
                <hr>
            </div>
        {% endfor %}
    </div>

    </div>

    </div>


{% endblock %}