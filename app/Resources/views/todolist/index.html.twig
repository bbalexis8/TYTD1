{% extends 'admin/adminbase.html.twig' %}

{% block body %}
    <h1>Liste des "To Do's"</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for todolist in todolists %}
            <tr>
                <td><a href="{{ path('todolist_show', { 'id': todolist.id }) }}">{{ todolist.id }}</a></td>
                <td>{{ todolist.nom }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('todolist_show', { 'id': todolist.id }) }}">Voir</a>
                        </li>
                        <li>
                            <a href="{{ path('todolist_edit', { 'id': todolist.id }) }}">Modifier</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('todolist_new') }}">Cr√©er un autre "To Do"</a>
        </li>
    </ul>
{% endblock %}
