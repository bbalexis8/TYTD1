{% extends 'base.html.twig' %}

{% block body %}
    <h1>Todolist</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ todolist.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ todolist.nom }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('todolist_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('todolist_edit', { 'id': todolist.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
