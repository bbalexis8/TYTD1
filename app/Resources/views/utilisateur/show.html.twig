{% extends  'admin/adminbase.html.twig' %}

{% block body %}
    <div class="bobody">
        <h2>Utilisateur n° {{ utilisateur.id }}</h2>


            <div class="table">
                <table class="table table-bordered">

            <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ utilisateur.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ utilisateur.prenom }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ utilisateur.email }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ utilisateur.adresse }}</td>
            </tr>
            <tr>
                <th>Code Postal</th>
                <td>{{ utilisateur.codepostal }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ utilisateur.ville }}</td>
            </tr>
            <tr>
                <th>Pays</th>
                <td>{{ utilisateur.pays }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ utilisateur.username }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ utilisateur.password }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ utilisateur.description }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ utilisateur.type }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ utilisateur.image }}</td>
            </tr>
            <tr>
                <th>Date d'inscription</th>
                <td>{% if utilisateur.dateinscription %}{{ utilisateur.dateinscription|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            </tbody>
        </table>
            </div>

        <br>
        <ul>
            <li>
                <a href="{{ path('utilisateur_index') }}">Retour à la liste</a>
            </li>
            <br>
            <li>
                <a href="{{ path('utilisateur_edit', { 'id': utilisateur.id }) }}">Modifier</a>
            </li>
            <li>
                {{ form_start(delete_form) }}<br>
                <input type="submit" value="Supprimer">
                {{ form_end(delete_form) }}
            </li>
        </ul>
        <hr>
    </div>
{% endblock %}
