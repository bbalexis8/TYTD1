{% extends'vuesclient/Default/basic.html.twig' %}


{% block body %}


    <div class="container">

        <form class="well form-horizontal" method="post" id="contact_form">

            <h2>Contactez Nous !</h2>
            <hr>
            <section class=success id="formulaire">

                <div class="col-lg-12 text-center">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        <input name="prenomU" placeholder="Tapez votre prénom ici" class="form-control" type="text">
                    </div>
                    <br>
                </div>

                <div class="col-lg-12 text-center">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                        <input name="nomU" placeholder="Nom" class="form-control" type="text">
                    </div>
                    <br>
                </div>

                <div class="col-lg-12 text-center">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-envelope"></i></span>
                        <input name="email" placeholder="Email" class="form-control" type="text">
                    </div>
                    <br>
                </div>

                <div class="col-lg-12 text-center">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-home"></i></span>
                        <input name="adresse" placeholder="Adresse (n° et rue, allée, boulevard, etc)"
                               class="form-control" type="text">
                    </div>
                    <br>
                </div>

                <div class="col-lg-12 text-center">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-home"></i></span>
                        <input name="codepostal" placeholder="Code Postal. ex : 72 000" class="form-control"
                               type="">
                    </div>
                    <br>
                </div>

                <div class="col-lg-12 text-center">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-home"></i></span>
                        <input name="ville" placeholder="ville" class="form-control" type="text">
                    </div>
                    <br>
                </div>

                <div class="col-lg-12 text-center">
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-globe"></i></span>
                        <input name="pays" placeholder="pays" class="form-control" type="text">
                    </div>
                    <br>
                </div>

                <div class="col-lg-12 text-center">
                    <label >Votre message ....</label>

                        <div class="input-group">
                            <span class="input-group-addon"><i class="glyphicon glyphicon-pencil"></i></span>
                            <input name="descriptionU" placeholder="message" class="form-control" type="text">
                        </div>
                    </div>



                <!-- Success message -->
                <div class="alert alert-success" role="alert" id="success_message">Message envoyé <i
                            class="glyphicon glyphicon-thumbs-up"></i> Merci pour votre message,
                    nous vous recontacterons dès que possible !
                </div>


                <div class="form-group">
                    <label class="col-md-4 control-label"></label>
                    <div class="col-md-4">
                        <button type="submit" class="btn btn-warning">Send
                            <span class="glyphicon glyphicon-send"></span></button>
                    </div>
                </div>

            </section>
        </form>

    </div>


{% endblock %}